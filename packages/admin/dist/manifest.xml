<package release="unstable">
  <id>admin</id>
  <name>La Distribution Admin</name>
  <version>0.4-24</version>
  <type>application</type>
  <need>lib-ld</need>
  <need>lib-bad-behavior</need>
  <need>css-h6e-minimal</need>
  <need>css-ld-ui</need>
  <need>js-jquery</need>
  <need>js-jquery-ui</need>
  <need>js-jquery-tablednd</need>
  <link title="Applications" rel="index" type="text/html" href="/slotter/" />
  <link title="Repositories" rel="section" type="text/html" href="/slotter/repositories" />
  <link title="Databases" rel="section" type="text/html" href="/slotter/databases" />
  <link title="Users" rel="section" type="text/html" href="/slotter/users" />
  <deploy>
      <origin>modules</origin>
      <destination path="shared">modules</destination>
  </deploy>
  <deploy>
      <origin>plugins</origin>
      <destination path="shared">plugins</destination>
  </deploy>
  <deploy>
      <origin>js</origin>
      <destination path="js">ld</destination>
  </deploy>
  <deploy>
      <origin>locales</origin>
      <destination path="shared">locales/admin</destination>
  </deploy>
  <configuration>
      <preference type="text" label="Short App Name" name="name"/>
  </configuration>
</package>