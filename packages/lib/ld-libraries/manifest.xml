<package release="unstable">
  <id>lib-ld</id>
  <name>La Distribution PHP libraries</name>
  <version>0.3-40-6</version>
  <type>lib</type>
  <need>lib-zend-framework</need>
  <need>lib-clearbricks</need>
  <deploy>
      <origin>lib</origin>
      <destination path="lib">./</destination>
  </deploy>
  <!--
  <deploy>
      <origin>locales</origin>
      <destination path="shared">locales/ld</destination>
  </deploy>
  -->
  <!-- we have to do that this way, because of limitations in old version of Ld Libraries -->
  <deploy>
      <origin>shared</origin>
      <destination path="shared">./</destination>
  </deploy>
</package>