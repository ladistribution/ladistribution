<package release="unstable">
  <id>wordpress-theme-minimal</id>
  <name>Minimal</name>
  <version>0.2a-3</version>
  <type>theme</type>
  <need>css-h6e-minimal</need>
  <extend>wordpress</extend>
  <directory>wp-content/themes/minimal</directory>
  <configuration>
      <preference type="text" name="h6e_minimal_pagewidth" label="Width" defaultValue="60em"/>
      <preference type="text" name="h6e_minimal_fontsize" label="Font Size" defaultValue="1.2em"/>
      <preference type="color" name="h6e_minimal_titlecolor" label="Title Color" defaultValue="#009DFF"/>
      <preference type="textarea" name="h6e_minimal_footertext" label="Footer Text" defaultValue="Powered by &lt;a href=&quot;http://www.wordpress.org/&quot;&gt;WordPress&lt;/a&gt; with a touch of &lt;a href=&quot;http://h6e.net/&quot;&gt;h6e&lt;/a&gt;"/>
  </configuration>
</package>