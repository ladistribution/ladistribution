<package>
  <id>gallery</id>
  <name>Gallery</name>
  <version>3.0-17-final</version>
  <type>application</type>
  <db>mysql</db>
  <php>
      <version>5.2.3</version>
  </php>
  <deploy>
      <origin>var</origin>
      <destination path="public">var</destination>
  </deploy>
  <deploy>
      <origin>modules</origin>
      <destination path="public">modules</destination>
  </deploy>
  <install>
      <preference type="user" label="Administrator" name="administrator" value=""/>
  </install>
  <configuration>
      <preference type="text" label="Gallery Name" name="title"/>
  </configuration>
  <link title="admin" rel="section" type="text/html" href="/admin/"/>
</package>