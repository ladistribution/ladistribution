<form method="post" action="<?php echo $this->url(array('action' => 'move')) ?>">

    <table class="ld-form">
        <tr>
            <th><label><?php echo $this->translate('Old path') ?></label></th>
            <td><input disabled="disabled" class="text" size="25" type="text" name="oldpath" value="<?php echo $this->instance->getPath() ?>" /></td>
        </tr>
        <tr>
            <th><label for="move_path"><?php echo $this->translate("New path") ?></label></th>
            <td><input class="text" size="25" type="text" id="move_path" name="path" value="<?php echo $this->instance->getPath() ?>" /></td>
            <td><input type="submit" class="submit button ld-button" value="<?php echo $this->translate("Move this application") ?>"/></td>
        </tr>
    </table>

</form>

