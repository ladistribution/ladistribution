<?php endif ?>

<?php if (!empty($this->preferences)) : ?>

<h3><?php echo $this->translate("Configuration") ?></h3>

<form method="post" action="<?php echo $this->url() ?>">

    <?php $this->preferencesRenderer($this->preferences, $this->configuration, 'configuration'); ?>

    <input type="submit" class="submit button" value="<?php echo $this->translate('Update configuration') ?>"/>

</form>

