<?php $this->instanceWidget() ?>

<div class="ld-panel">

<?php $this->instanceNavigation() ?>

<div class="ld-panel-content h6e-block">

<?php if ($updateVersion = $this->instance->hasUpdate()) : ?>

<h3><?php echo $this->translate("Update available") ?></h3>

<p><?php printf($this->translate("A new version (%s) is available."), $updateVersion) ?></p>

<p><a href="<?php echo $this->instanceActionUrl('update') ?>?version=<?php echo $updateVersion ?>"><?php
    echo $this->translate("You can update now.") ?></a></p>

