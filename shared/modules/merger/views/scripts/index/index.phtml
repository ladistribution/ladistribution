<div class="ld-merger">

<div class="h6e-main">
    <div class="h6e-block">

    <?php foreach ($this->entries as $entry) : ?>

    <div class="hentry">

    <?php if (!empty($entry['user'])) : $author = $entry['user']; ?>
        <a class="avatar" href="<?php echo $entry['userUrl'] ?>"><?php
            echo Ld_Ui::getAvatar($author, 32) ?></a>
        <a class="username" href="<?php echo $entry['userUrl'] ?>"><?php
            echo empty($author['fullname']) ? $author['username'] : $author['fullname'] ?></a>
    <?php endif ?>

    <?php if ($entry['type'] == 'link') : ?>
          <?php if (!empty($entry['user'])) : echo $entry['action']; endif ?>
          <?php if (!empty($entry['enclosure'])) : ?>
            <img class="enclosure" src="<?php echo $entry['enclosure']->url ?>"/>
          <?php endif ?>
        <h2 class="h6e-entry-title"><a href="<?php echo $entry['link'] ?>"><?php echo $entry['title'] ?></a></h2>
        <?php if (!empty($entry['content'])) : ?>
            <div class="h6e-post-content"><?php echo $entry['content'] ?></div>
        <?php endif ?>

    <?php elseif ($entry['type'] == 'status') : ?>
        <span class="h6e-entry-title"><?php echo $entry['title'] ?></span>

    <?php else : ?>

        <?php if (!empty($entry['user'])) : echo $entry['action']; endif ?>
        <?php if ($entry['title'] != $entry['content']) : ?>
            <h2 class="h6e-entry-title"><a href="<?php echo $entry['link'] ?>"><?php echo $entry['title'] ?></a></h2>
        <?php endif ?>
        <?php if (!empty($entry['content'])) : ?>
            <div class="h6e-post-content"><?php echo $entry['content'] ?></div>
        <?php endif ?>

    <?php endif ?>

    <?php
    if (!empty($entry['application'])) {
        $instance = $entry['application'];
    }
    ?>

    <div class="h6e-post-info ld-app-name <?php if ($instance) echo $instance->getPackageId() ?>" style="clear:both">
        <?php echo $entry['time'] ?>
        <?php if ($instance) : ?>
            via <a href="<?php echo $instance->getUrl() ?>"><?php echo $instance->getName() ?></a>
        <?php endif ?>
    </div>

    </div>

    <?php endforeach ?>

    </div>
</div>

<div class="h6e-sidebar">
    <div class="h6e-sidebar-inner">

        <h3>Applications</h3>

        <?php $this->instancesList() ?>

    </div>
</div>

</div>